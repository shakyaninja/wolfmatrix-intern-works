{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ movie.description }}</td>
            </tr>
            <tr>
                <th>Released_year</th>
                <td>{{ movie.releasedYear }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movie_index') }}" class="btn btn-secondary m-3">back to list</a>

    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}" class="btn btn-primary m-3">edit</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
